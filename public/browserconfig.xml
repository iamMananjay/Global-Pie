<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
  <msapplication>
    <tile>
      <!-- Tile color for Windows -->
      <TileColor>#1A237E</TileColor>

      <!-- Square 70x70 logo (for small tiles) -->
      <square70x70logo src="/mstile-70x70.png"/>

      <!-- Square 150x150 logo (for medium tiles) -->
      <square150x150logo src="/mstile-150x150.png"/>

      <!-- Wide 310x150 logo (for wide tiles) -->
      <wide310x150logo src="/mstile-310x150.png"/>

      <!-- Square 310x310 logo (for large tiles) -->
      <square310x310logo src="/mstile-310x310.png"/>
    </tile>
  </msapplication>
</browserconfig>